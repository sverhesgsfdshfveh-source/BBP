{
  "name": "browser-bridge-plus",
  "version": "1.0.0",
  "description": "Isolated implementation workspace for multi-client/multi-tab relay architecture.",
  "type": "module",
  "scripts": {
    "dev:server": "tsx watch src/server/index.ts",
    "start:server": "tsx src/server/index.ts",
    "build": "npm run build:server && npm run build:console",
    "build:server": "tsc -p tsconfig.json",
    "build:console": "node scripts/build-console.mjs",
    "smoke:plus": "node scripts/smoke-plus.mjs",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "express": "^4.21.2",
    "ws": "^8.18.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.8",
    "@types/ws": "^8.5.14",
    "esbuild": "^0.25.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  }
}
