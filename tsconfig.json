{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": ".",
    "types": ["node", "vitest/globals"],
    "jsx": "preserve"
  },
  "include": ["src", "tests", "scripts"]
}
